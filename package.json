{
  "name": "@dnb-org/dnb-hugo-hooks",
  "version": "1.0.23",
  "license": "MIT",
  "description": "A template hooks system for Hugo",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "homepage": "https://github.com/dnb-org/dnb-hugo-hooks",
  "bugs": {
    "url": "https://github.com/dnb-org/dnb-hugo-hooks/issues"
  },
  "devDependencies": {
    "@dnb-org/babel-config": "^3.4.7",
    "@dnb-org/bootstrap-config": "^3.4.7",
    "@dnb-org/browserslist-config": "^3.4.7",
    "@dnb-org/commitlint-config": "^3.4.8",
    "@dnb-org/cssnano-config": "^3.4.8",
    "@dnb-org/cypress-config": "^3.4.9",
    "@dnb-org/eslint-config": "^3.4.22",
    "@dnb-org/postcss-config": "^3.4.8",
    "@dnb-org/prettier-config": "^3.4.9",
    "@dnb-org/remark-config": "^3.4.7",
    "@dnb-org/standard-version-config": "^3.4.6",
    "@dnb-org/stylelint-config": "^3.4.7",
    "@dnb-org/textlint-config": "^3.4.8",
    "@dnb-org/tools": "^3.4.8",
    "@dnb-org/webpack-config": "^3.4.8"
  },
  "scripts": {
    "clean": "run-p clean:*",
    "clean:hugo": "rimraf node_modules resources package-lock.json public",
    "release": "npm run release:patch",
    "release:major": "standard-version --release-as major -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:minor": "standard-version --release-as minor -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release:patch": "standard-version --release-as patch -a -t \"v\" --releaseCommitMessageFormat \"chore(release): v{{currentTag}}\" && ./bin/release-hook-postrelease.sh"
  },
  "private": true
}
